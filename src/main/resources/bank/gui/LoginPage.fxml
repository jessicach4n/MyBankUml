                  <Insets top="10.0" />
               </VBox.margin>
            </Button>

            <!-- Footer Text -->
            <Label text="Secure Banking System" textFill="#999999">
               <font>
                  <Font size="12.0" />
               </font>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
</StackPane>
