                  <Label text="MyBank" textFill="#20A88E">
                     <font>
                        <Font name="System Bold" size="42.0" />
                     </font>
                  </Label>
                  <Label text="Welcome Back" textFill="#666666">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </VBox>

            <!-- Username Field -->
            <VBox spacing="8.0">
               <children>
                  <Label text="Username" textFill="#333333">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="usernameField" prefHeight="45.0" promptText="Enter your username" style="-fx-background-color: #F5F5F5; -fx-background-radius: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-padding: 12;">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="8.0">
               <children>
                  <Label text="Password" textFill="#333333">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="passwordField" prefHeight="45.0" promptText="Enter your password" style="-fx-background-color: #F5F5F5; -fx-background-radius: 8; -fx-border-color: #E0E0E0; -fx-border-radius: 8; -fx-padding: 12;">
