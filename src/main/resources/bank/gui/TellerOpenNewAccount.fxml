<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:controller="bank.controller.OpenNewAccountController"
            prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1">

   <left>
      <VBox prefHeight="720.0" prefWidth="250.0" style="-fx-background-color: #20A88E;" BorderPane.alignment="CENTER">
         <children>

            <!-- Top Brand Bar -->
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0">
               <children>
                  <Label text="MyBankUML" textFill="WHITE">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>

                  <!-- Empty graphic button (kept from your design) -->
                  <Button alignment="CENTER"
                          contentDisplay="GRAPHIC_ONLY"
                          minHeight="30.0" minWidth="30.0"
                          prefHeight="30.0" prefWidth="30.0"
                          mnemonicParsing="false"
                          style="-fx-background-color: transparent;">
                     <HBox.margin>
                        <Insets left="110.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>

            <!-- User Profile Block -->
            <VBox alignment="CENTER" prefHeight="130.0" prefWidth="100.0">
               <children>
                  <StackPane>
                     <children>
                        <Circle radius="30.0" stroke="#484848" strokeType="INSIDE" style="-fx-fill: #484848;" />
                        <Text fill="WHITE" text="JD">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Text>
                     </children>
                  </StackPane>

                  <Label text="Alice Wonderland" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>

                  <Label text="Teller" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </VBox>

            <!-- Navigation Button -->
            <Button alignment="BASELINE_LEFT"
                    mnemonicParsing="false"
                    prefHeight="40.0" prefWidth="250.0"
                    style="-fx-background-color: white;"
                    text="Manage Accounts" textFill="#000000ff">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </Button>

         </children>
      </VBox>
   </left>

   <center>
      <VBox alignment="TOP_LEFT"
            prefHeight="200.0" prefWidth="100.0"
            BorderPane.alignment="CENTER">
         <children>

            <!-- Page Title -->
            <Label text="Open New Account">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" top="50.0" />
               </VBox.margin>
            </Label>

            <!-- Customer Selection Label -->
            <Label text="Select Customer" textFill="#20A88E">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </Label>

            <!-- Customer Dropdown -->
            <ComboBox fx:id="customerComboBox"
                      prefHeight="35.0" prefWidth="300.0"
                      promptText="Choose a customer">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ComboBox>

            <!-- Account Type Label -->
            <Label text="Account Type" textFill="#20A88E">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </Label>

            <!-- Account Type Dropdown -->
            <ComboBox fx:id="accountTypeComboBox"
                      prefHeight="35.0" prefWidth="300.0"
                      promptText="Savings">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="Savings" />
                     <String fx:value="Card" />
                     <String fx:value="Check" />
                  </FXCollections>
               </items>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </ComboBox>

            <!-- Buttons -->
            <HBox alignment="CENTER_LEFT"
                  prefHeight="100.0" prefWidth="200.0"
                  spacing="10.0">

               <children>
                  <Button mnemonicParsing="false"
                          onAction="#handleSubmit"
                          prefHeight="40.0" prefWidth="145.0"
                          style="-fx-background-color: #d3d3d3; -fx-text-fill: #484848;"
                          text="Submit">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>

                  <Button mnemonicParsing="false"
                          onAction="#handleCancel"
                          prefHeight="40.0" prefWidth="145.0"
                          style="-fx-background-color: #d3d3d3; -fx-text-fill: #484848;"
                          text="Cancel">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
               </children>

            </HBox>

         </children>

         <padding>
            <Insets left="50.0" />
         </padding>

      </VBox>
   </center>

</BorderPane>