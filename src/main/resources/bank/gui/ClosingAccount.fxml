<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bank.controller.ClosingAccountController"
            prefHeight="600.0" prefWidth="900.0">

   <left>
      <VBox prefHeight="600.0" prefWidth="240.0" style="-fx-background-color: #2CBF99;" BorderPane.alignment="CENTER">
         <children>

            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0" spacing="10.0">
               <padding>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="MYBank">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Text>
                  <Pane HBox.hgrow="ALWAYS" />
                  <!-- Simple Arrow Icon Representation -->
                  <Label text="âž”" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <style>-fx-rotate: 180; -fx-border-color: white; -fx-border-radius: 3; -fx-padding: 0 4 0 4;</style>
                  </Label>
               </children>
            </HBox>


            <!-- User Profile -->
            <VBox alignment="CENTER" spacing="5.0" prefHeight="200.0">
               <children>
                  <StackPane prefHeight="80.0" prefWidth="80.0">
                     <children>
                        <Circle radius="40" fill="#333"/>
                        <Text text="JD" fill="WHITE">
                           <font><Font name="System Bold" size="32.0"/></font>
                        </Text>
                     </children>
                  </StackPane>

                  <Label text="Alice Wonderland" textFill="#1e1e1e">
                     <font><Font name="System Bold" size="16.0"/></font>
                  </Label>
                  <Label text="Teller" textFill="#1e1e1e">
                     <font><Font size="12.0"/></font>
                  </Label>
               </children>
            </VBox>

            <!-- Navigation: fx:id="back_btn" is used here for navigation back to home -->
            <Button fx:id="back_btn" 
                    mnemonicParsing="false"
                    prefHeight="40.0" prefWidth="240.0"
                    onAction="#navigateToManageAccounts"
                    style="-fx-background-color: #FFFFFF; -fx-background-radius: 0;"
                    text="Manage Accounts" textFill="#1e1e1e">
               <font><Font size="14.0"/></font>
               <padding><Insets left="20.0"/></padding>
               <alignment>CENTER_LEFT</alignment>
            </Button>

         </children>
      </VBox>
   </left>

   <!-- MAIN PANEL -->
   <center>
      <VBox spacing="30.0" style="-fx-background-color: #FFFFFF;" BorderPane.alignment="TOP_LEFT">
         <padding>
            <Insets top="40" left="40" right="40" bottom="40"/>
         </padding>

         <children>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
               <children>
                  <Label text="Closing Customer Account">
                     <font><Font name="System Bold" size="24.0"/></font>
                  </Label>
               </children>
            </HBox>

            <!-- Customer Info -->
                <HBox spacing="40.0">
                    <children>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Customer Name" textFill="#666"/>
                                <TextField fx:id="customer_name_fld" editable="false" prefHeight="35.0" prefWidth="250.0">
                                    <font><Font name="System Bold" size="17.0"/></font>
                                </TextField>
                            </children>
                        </VBox>

                        <VBox spacing="5.0">
                            <children>
                                <Label text="Account Number" textFill="#666"/>
                                <TextField fx:id="account_num_fld" editable="false" prefHeight="35.0" prefWidth="250.0">
                                    <font><Font name="System Bold" size="17.0"/></font>
                                </TextField>
                            </children>
                        </VBox>

                    </children>
                </HBox>

                <!-- Warning-->
                <Label text="Warning: This action cannot be undone."
                    textFill="#DC3545">
                    <font>
                        <Font name="System Bold" size="15.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                </Label>


            <!-- Buttons -->
            <HBox spacing="15.0" alignment="CENTER_LEFT">
               <children>

                  <!-- confirm_btn -->
                  <Button fx:id="confirm_btn"
                        mnemonicParsing="false"
                        onAction="#handleConfirm"
                        text="Confirm"
                        style="-fx-background-color: white; 
                            -fx-border-color: #DC3545; 
                            -fx-border-radius: 4; 
                            -fx-text-fill: #DC3545;">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                    <padding>
                        <Insets top="8.0" bottom="8.0" left="20.0" right="20.0" />
                    </padding>
                </Button>

                  <!-- cancel_btn -->
                  <Button fx:id="cancel_btn"
                          onAction="#handleCancel"
                          text="Cancel"
                          style="-fx-background-color: #DDDDDD; -fx-text-fill: #000; -fx-background-radius: 4;">
                     <padding><Insets top="8" bottom="8" left="20" right="20"/></padding>
                     <font><Font name="System Bold" size="13.0"/></font>
                  </Button>

               </children>
            </HBox>

         </children>
      </VBox>
   </center>

</BorderPane>