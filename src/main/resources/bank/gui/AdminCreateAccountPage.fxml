<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:controller="bank.controller.AdminCreateAccountController"
            maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1">    <left>
        <VBox prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #58A79E;" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0" spacing="5.0">
                    <children>
                        <Label text="MYBank.inc" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <Button mnemonicParsing="false" style="-fx-background-color: transparent;" text="â†’" textFill="WHITE">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <VBox alignment="CENTER" prefHeight="100.0" prefWidth="100.0" style="-fx-background-color: #4C9389;">
                    <children>
                        <StackPane prefHeight="50.0" prefWidth="50.0">
                            <children>
                                <Circle fill="#888888" radius="25.0" stroke="TRANSPARENT" strokeType="INSIDE" />
                                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="JD">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Text>
                            </children>
                        </StackPane>
                        <Label text="Daniel Kim" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </Label>
                        <Label text="Administrator" textFill="WHITE">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </VBox>
                <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #58A79E; -fx-alignment: CENTER_LEFT; -fx-padding: 0 0 0 10;" text="Users" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #58A79E; -fx-alignment: CENTER_LEFT; -fx-padding: 0 0 0 10;" text="Branch" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </left>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="TOP_LEFT">
            <children>
                <Label text="Create A New Account">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Label>
                <GridPane hgap="20.0" vgap="10.0">
                    <children>
                        <Label text="Employee Name" GridPane.halignment="LEFT" GridPane.rowIndex="0" />
                        <TextField fx:id="nameField" promptText="Name" GridPane.columnSpan="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />

                        <Label text="Position" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="0" />
                        <TextField fx:id="positionField" text="Teller" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" />

                        <Label text="Role" GridPane.rowIndex="2" />
                        <ComboBox fx:id="roleComboBox" prefWidth="200.0" promptText="Select a role..." GridPane.rowIndex="3" />
                    </children>
                </GridPane>

                <!-- Message Label for feedback -->
                <Label fx:id="messageLabel" textFill="#20A88E">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>

                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Button fx:id="submitButton" onAction="#handleSubmit" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #333333; -fx-text-fill: white; -fx-cursor: hand;" text="Submit">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="cancelButton" onAction="#handleCancel" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #cccccc; -fx-cursor: hand;" text="Cancel">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button fx:id="backButton" onAction="#handleBack" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #58A79E; -fx-text-fill: white; -fx-cursor: hand;" text="Back">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>